[run]
source = src/app
omit =
    src/app/core/ports.py
    src/app/__init__.py
    src/app/__version__.py
    src/app/main.py
    src/app/entrypoints/*
    src/app/db.py
    src/app/di.py
    src/app/adapters/memory_postgres.py
    src/app/adapters/memory_redis.py
    src/app/config/logging.py
    src/app/telemetry/otel.py
    src/app/metrics.py
    */__init__.py

[report]
show_missing = True
skip_covered = True
